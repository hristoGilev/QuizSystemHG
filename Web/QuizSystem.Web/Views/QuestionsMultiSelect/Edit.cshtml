@model QuizSystem.Web.ViewModels.QuestionsMultiCelect.QuestionMultiSelectOutputModel
@{
    this.ViewData["Title"] = "Edit Question";
}
<h1>@this.ViewData["Title"]</h1>
<form method="post" asp-action="Edit">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>

        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>


    <div>

        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>

    <div>

    <label asp-for="AnswerTypeA"></label>
    <textarea asp-for="AnswerTypeA" class="form-control"></textarea>
    <span asp-validation-for="AnswerTypeA" class="text-danger"></span>

    </div>
    <div>

        <label asp-for="AnswerTypeB"></label>
        <textarea asp-for="AnswerTypeB" class="form-control"></textarea>
        <span asp-validation-for="AnswerTypeB" class="text-danger"></span>

    </div>
    <div>

        <label asp-for="AnswerTypeC"></label>
        <textarea asp-for="AnswerTypeC" class="form-control"></textarea>
        <span asp-validation-for="AnswerTypeC" class="text-danger"></span>

    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />

</form>